<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/fynn_prompt_dialog_bg_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fynn_prompt_dialog_title_bar_bg"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/title_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="#DCDCDC"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_addview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="left" />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:visibility="gone" >
        </ImageView>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1px"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/msg_btn_divider"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        android:background="#DCDCDC"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fynn_prompt_dialog_btn_left_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/btn_divider1"
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fynn_prompt_dialog_btn_center_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/btn_divider2"
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/fynn_prompt_dialog_btn_right_selector"
            android:clickable="true"
            android:gravity="center"
            android:textColor="#808080"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/work/workspace/PromptDialog/res/layout/fynn_prompt_dialog_titlebar_color.xml -->